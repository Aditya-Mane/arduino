const int8_t led = 5;
const int8_t btn = 2;

int8_t led_stat = HIGH; // current led stat
int8_t btn_prev = HIGH; // previous status of button

void setup() 
{
 pinMode(btn,INPUT_PULLUP); // set pin 2 as input with internal pullup
 pinMode(led,OUTPUT);
}

void loop()
{
  int8_t btn_stat = digitalRead(btn); // read pin 2

  if(btn_prev == HIGH && btn_stat == LOW) // check for falling edge
   {
     led_stat = ~led_stat; // toggle led status
     digitalWrite(led,led_stat); //update led status
   }
  btn_prev = btn_stat; // store current btn state as previous state
}
